        DC      SCSP
        DC      CURR
        DC      FETCH
        DC      CONT
        DC      STORE
        DC      CREAT
        DC      RBRAC
        DC      PSCOD
DOCOL:  LEA     BP,[BP-CELLS(1)]
        MOV     [BP],SI ;{R1 <- (IP)}
        LEA     SI,[BX+CELLS(1)]  ;{(IP) <- (PFA)}
;        CALL    DISPLAYSI
_SWITCH_1_({
        _SWITCH_1_({JMPHERE_FROM_FORTH})
        ;{ Allow interrupts to happen.}
        _SWITCH_1_({JMPHERE_FROM_OS})
